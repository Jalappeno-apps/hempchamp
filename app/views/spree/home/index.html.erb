    <div class="homepage-hero-image-text text-uppercase mb-2 mx-auto pb-3 pb-md-4">
      <span>Full Spectrum Olej Konopny</span>
    </div>
    <div>
      <%= link_to "KUP TERAZ", spree.products_path, class: 'btn btn-primary spree-btn px-5 font-weight-500' %>
    </div>
  </div>
</div>

<div class="container features pt-5 pb-5">
